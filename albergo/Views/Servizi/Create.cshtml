@model albergo.Models.ServizioAggiuntivo

@{
    ViewData["Title"] = "Crea Servizio";
}

<h2>Crea Servizio</h2>

<h4>Servizio</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Descrizione" class="control-label">Descrizione</label>
                <input asp-for="Descrizione" class="form-control" placeholder="Inserisci una descrizione del servizio" />
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezzo" class="control-label">Prezzo (€)</label>
                <input asp-for="Prezzo" class="form-control" placeholder="Inserisci il prezzo del servizio" type="number" step="0.01" min="0" />
                <span asp-validation-for="Prezzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Indietro</a>
            </div>
        </form>
    </div>
</div>